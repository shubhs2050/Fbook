<div class="container text-center">
  <h1>Sign in</h1>
  
    
  <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
      <%= f.email_field :email, class: "form-control form-half", placeholder: "Email" %>
      </div>
      <div class="form-group">
    <%= f.password_field :password, class: "form-control form-half", placeholder: "Password" %>
      </div>
    </br>
    <%= f.submit "Log in", class: "btn btn-success" %>
  <% end %>
  <br/>
  <p>Not a member? <%=link_to 'Sign up here!', signup_path %></p>
  



</div>







